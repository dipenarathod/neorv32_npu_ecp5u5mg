with "config/wb_ov5640_tests_config.gpr";
with "bare_runtime.gpr";
with "neorv32_hal.gpr";
with "wb_ov5640_helper.gpr";
project Wb_Ov5640_Tests is

   for Target use "riscv64-elf";
   for Runtime ("Ada") use Bare_Runtime'Runtime ("Ada");

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Wb_Ov5640_Tests_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("wb_ov5640_tests.adb");

   package Compiler is
      for Default_Switches ("Ada") use Wb_Ov5640_Tests_Config.Ada_Compiler_Switches & ("-gnat2022");
   end Compiler;

   package Linker is
      for Switches ("Ada") use ("-T", Neorv32_Hal'Project_Dir & "/src/link.ld") & ("-gnat2022");
   end Linker;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Wb_Ov5640_Tests;
